@*
    _Layout.cshtml — Fixed Extra Slim Black Theme for Photography Portfolio
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Photography Portfolio</title>

    <!-- Bootstrap & Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #0d0d0d;
            color: #f8f9fa;
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        /* 🔹 Extra Slim Fixed Navbar */
        .navbar {
            background-color: #000;
            box-shadow: 0 2px 8px rgba(255, 255, 255, 0.05);
            padding-top: 2px !important;
            padding-bottom: 2px !important;
            min-height: 40px;
        }

        .navbar-brand {
            font-weight: 700;
            color: #00bcd4 !important;
            letter-spacing: 1px;
            text-transform: uppercase;
            font-size: 1rem;
            line-height: 1;
        }

        .navbar-nav .nav-link {
            color: #f8f9fa !important;
            font-weight: 500;
            padding: 4px 8px !important;
            transition: all 0.3s ease;
            font-size: 0.9rem;
            line-height: 1;
        }

            .navbar-nav .nav-link:hover,
            .navbar-nav .nav-link.active {
                color: #00bcd4 !important;
                transform: translateY(-1px);
            }

        .navbar-toggler {
            padding: 2px 6px;
            font-size: 0.8rem;
        }

        /* ✅ Space for fixed navbar */
        main.container {
            padding-top: 70px;
            padding-bottom: 40px;
        }

        /* Footer */
        footer {
            background-color: #000;
            color: #aaa;
            padding: 18px 0;
            font-size: 0.9rem;
            border-top: 1px solid #222;
        }

            footer a {
                color: #00bcd4;
                text-decoration: none;
            }

                footer a:hover {
                    color: #fff;
                    text-decoration: underline;
                }

            footer i {
                transition: all 0.3s ease;
            }

                footer i:hover {
                    color: #fff;
                    transform: scale(1.1);
                }

        @@media (max-width: 768px) {
            .navbar-brand {
                font-size: 0.95rem;
            }

            .navbar-nav .nav-link {
                padding: 6px 10px !important;
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <i class="fa fa-camera-retro me-2" style="color:#00bcd4;"></i>
                Photography
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" href="/">
                            <i class="fa fa-home me-1"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "About" ? "active" : "")" href="/Home/About">
                            <i class="fa fa-user me-1"></i> About
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Contact" ? "active" : "")" href="/Home/Contact">
                            <i class="fa fa-envelope me-1"></i> Contact
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Login" ? "active" : "")" href="/Admin/Login">
                            <i class="fa fa-user-shield me-1"></i> Admin
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Body -->
    <main class="container">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-center">
        <div class="container">
            <p class="mb-2">
                &copy; @DateTime.Now.Year <span style="color:#00bcd4;" class="fw-semibold">Photography Portfolio</span>. All rights reserved.
            </p>
            <div>
                <a href="https://instagram.com" target="_blank" class="me-3"><i class="fab fa-instagram fa-lg"></i></a>
                <a href="https://facebook.com" target="_blank" class="me-3"><i class="fab fa-facebook fa-lg"></i></a>
                <a href="https://twitter.com" target="_blank" class="me-3"><i class="fab fa-twitter fa-lg"></i></a>
                <a href="https://youtube.com" target="_blank"><i class="fab fa-youtube fa-lg"></i></a>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
