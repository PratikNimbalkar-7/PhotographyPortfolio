@model IEnumerable<PhotographyPortfolio.Models.Category>
@{
    ViewData["Title"] = "Manage Categories";
}

<div class="container mt-5">
    <div class="card category-card p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-bold text-glow">
                <i class="fa fa-tags me-2"></i> Manage Categories
            </h3>
        </div>

        <!-- Add Category Form -->
        <form method="post" action="/Admin/AddCategory" class="d-flex mb-4">
            <input name="name" class="form-control category-input me-2" placeholder="Enter new category name" required />
            <button type="submit" class="btn category-btn">
                <i class="fa fa-plus-circle me-1"></i> Add
            </button>
        </form>

        <!-- Categories Table -->
        <div class="table-responsive">
            <table class="table table-borderless align-middle text-light">
                <thead>
                    <tr class="table-header">
                        <th scope="col">ID</th>
                        <th scope="col">Category Name</th>
                        <th scope="col" class="text-end">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr class="table-row">
                            <td>@c.Id</td>
                            <td>@c.Name</td>
                            <td class="text-end">
                                <form method="post" action="/Admin/DeleteCategory/@c.Id"
                                      onsubmit="return confirm('Are you sure you want to delete this category?');"
                                      class="d-inline">
                                    <button class="btn delete-btn">
                                        <i class="fa fa-trash me-1"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- 🔥 Modern Black Theme CSS -->
<style>
    body {
        background: radial-gradient(circle at top left, #111 0%, #000 70%);
        color: #fff;
        font-family: 'Poppins', sans-serif;
    }

    .category-card {
        background: rgba(25, 25, 25, 0.9);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 20px;
        box-shadow: 0 0 20px rgba(0, 188, 212, 0.2);
        backdrop-filter: blur(10px);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .category-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 0 25px rgba(0, 188, 212, 0.35);
        }

    .text-glow {
        color: #00bcd4;
        text-shadow: 0 0 10px rgba(0, 188, 212, 0.8);
    }

    .category-input {
        background: #1a1a1a;
        color: #fff;
        border: 1px solid #333;
        border-radius: 8px;
        padding: 10px;
    }

        .category-input:focus {
            outline: none;
            border-color: #00bcd4;
            box-shadow: 0 0 8px rgba(0, 188, 212, 0.5);
        }

    .category-btn {
        background: linear-gradient(90deg, #00bcd4, #0097a7);
        border: none;
        color: #fff;
        font-weight: 600;
        border-radius: 8px;
        padding: 10px 18px;
        transition: all 0.3s;
    }

        .category-btn:hover {
            background: linear-gradient(90deg, #0097a7, #00acc1);
            box-shadow: 0 0 15px rgba(0, 188, 212, 0.6);
        }

    .delete-btn {
        background: transparent;
        border: 1px solid #dc3545;
        color: #dc3545;
        border-radius: 8px;
        padding: 6px 14px;
        transition: all 0.3s;
    }

        .delete-btn:hover {
            background: #dc3545;
            color: #fff;
            box-shadow: 0 0 10px rgba(220, 53, 69, 0.6);
        }

    .table-header {
        color: #00bcd4;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    .table-row {
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        transition: all 0.3s;
    }

        .table-row:hover {
            background: rgba(0, 188, 212, 0.1);
        }
</style>
