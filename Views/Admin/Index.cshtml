@model IEnumerable<PhotographyPortfolio.Models.Photo>
@{
    ViewData["Title"] = "Admin - Photos";
}

<style>
    /* ===== Black Theme Table ===== */
    .admin-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

        .admin-header h3 {
            color: #00bcd4;
            font-weight: 600;
            letter-spacing: 1px;
        }

        .admin-header .btn {
            margin-left: 5px;
            border-radius: 20px;
            transition: all 0.3s ease;
            font-size: 0.9rem;
            padding: 6px 14px;
        }

            .admin-header .btn:hover {
                transform: scale(1.05);
            }

    /* Table styling */
    table {
        width: 100%;
        border-collapse: collapse;
        color: #ddd;
        background-color: #111;
        border-radius: 10px;
        overflow: hidden;
    }

    thead {
        background-color: #000;
        color: #00bcd4;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    th, td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #222;
        vertical-align: middle;
    }

    tbody tr:hover {
        background-color: #1a1a1a;
        transition: background 0.3s ease;
    }

    /* Button Styles */
    .btn-primary {
        background-color: #00bcd4;
        border: none;
        color: #000;
        font-weight: 600;
    }

        .btn-primary:hover {
            background-color: #00e5ff;
            color: #000;
        }

    .btn-danger {
        background-color: #e53935;
        border: none;
    }

        .btn-danger:hover {
            background-color: #ff5252;
        }

    .btn-success {
        background-color: #43a047;
        border: none;
    }

        .btn-success:hover {
            background-color: #66bb6a;
        }

    .btn-secondary {
        background-color: #757575;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #9e9e9e;
        }

    /* Subtle Animation for Rows */
    tbody tr {
        transition: transform 0.2s ease;
    }

        tbody tr:hover {
            transform: scale(1.01);
        }

    /* Responsive */
    @@media (max-width: 768px) {
        table

    {
        font-size: 0.85rem;
    }

    .admin-header {
        flex-direction: column;
        align-items: flex-start;
    }

        .admin-header h3 {
            margin-bottom: 10px;
        }

    }</style>

<div class="admin-header">
    <h3><i class="fa fa-images me-2"></i> Photos</h3>
    <div>
        <a class="btn btn-sm btn-success" href="/Admin/Create"><i class="fa fa-plus me-1"></i> Add Photo</a>
        <a class="btn btn-sm btn-secondary" href="/Admin/Categories"><i class="fa fa-list me-1"></i> Categories</a>
        <a class="btn btn-sm btn-danger" href="/Admin/Logout"><i class="fa fa-sign-out-alt me-1"></i> Logout</a>
    </div>
</div>

<table class="table table-dark table-hover align-middle">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Category</th>
            <th style="width:160px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Title</td>
                <td>@p.Category?.Name</td>
                <td>
                    <a class="btn btn-sm btn-primary me-1" href="/Admin/Edit/@p.Id">
                        <i class="fa fa-edit"></i> Edit
                    </a>
                    <form method="post" action="/Admin/Delete/@p.Id" style="display:inline;"
                          onsubmit="return confirm('Are you sure you want to delete this photo?');">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
