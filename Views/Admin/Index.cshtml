@model IEnumerable<PhotographyPortfolio.Models.Photo>
@{
    ViewData["Title"] = "Admin - Photos";
}
<div class="d-flex justify-content-between mb-3">
    <h3>Photos</h3>
    <div>
        <a class="btn btn-sm btn-success" href="/Admin/Create">Add Photo</a>
        <a class="btn btn-sm btn-secondary" href="/Admin/Categories">Categories</a>
        <a class="btn btn-sm btn-danger" href="/Admin/Logout">Logout</a>
    </div>
</div>

<table class="table">
    <thead><tr><th>Id</th><th>Title</th><th>Category</th><th></th></tr></thead>
    <tbody>
        @foreach(var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Title</td>
                <td>@p.Category?.Name</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/Admin/Edit/@p.Id">Edit</a>
                    <form method="post" action="/Admin/Delete/@p.Id" style="display:inline;" onsubmit="return confirm('Delete?');">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
