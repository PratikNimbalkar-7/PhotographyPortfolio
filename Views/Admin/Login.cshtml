@{
    ViewData["Title"] = "Admin Login";
}
<div class="row justify-content-center">
    <div class="col-md-4">
        <h3>Admin Login</h3>
        @if(ViewBag.Error != null) { <div class="alert alert-danger">@ViewBag.Error</div> }
        <form method="post">
            <div class="mb-2"><input class="form-control" name="username" placeholder="username" /></div>
            <div class="mb-2"><input class="form-control" name="password" type="password" placeholder="password" /></div>
            <button class="btn btn-primary">Login</button>
        </form>
    </div>
</div>
