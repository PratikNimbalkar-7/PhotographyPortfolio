@model IEnumerable<PhotographyPortfolio.Models.Photo>
@{
    ViewData["Title"] = "Photo Gallery";
    var cats = ViewBag.Categories as List<PhotographyPortfolio.Models.Category>;
}

<style>
    body {
        background-color: #0d0d0d;
        color: #f5f5f5;
        font-family: 'Poppins', sans-serif;
    }

    h1 {
        color: #00bcd4;
        text-align: center;
        margin-bottom: 40px;
        font-weight: 700;
        letter-spacing: 1px;
    }

    .gallery-section {
        padding: 50px 0;
    }

    .card {
        background-color: #1a1a1a;
        border: 1px solid #333;
        border-radius: 12px;
        transition: all 0.3s ease;
        overflow: hidden;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 20px rgba(0, 188, 212, 0.4);
        }

        .card img {
            width: 100%;
            height: 220px;
            object-fit: cover;
            border-bottom: 1px solid #333;
            transition: transform 0.3s ease;
        }

            .card img:hover {
                transform: scale(1.05);
            }

    .card-body {
        text-align: center;
        padding: 15px;
    }

    h3 {
        color: #00bcd4;
        font-size: 1.1rem;
        margin-bottom: 10px;
        text-transform: uppercase;
    }

    .btn-primary {
        background: linear-gradient(45deg, #00bcd4, #007bff);
        border: none;
        border-radius: 50px;
        transition: all 0.3s ease;
        font-size: 0.9rem;
    }

        .btn-primary:hover {
            background: linear-gradient(45deg, #007bff, #00bcd4);
            transform: scale(1.05);
        }

    .alert-warning {
        background-color: #1a1a1a;
        border: 1px solid #333;
        color: #ccc;
    }
</style>

<div class="container gallery-section">
    <h1>📸 Photo Gallery</h1>

    @if (cats != null && cats.Any())
    {
        <div class="row">
            @foreach (var category in cats)
            {
                var firstPhoto = Model.FirstOrDefault(p => p.CategoryId == category.Id);
                if (firstPhoto != null)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                        <div class="card shadow-sm border-0 h-100">
                            <a href="@Url.Action("CategoryPhotos", "Home", new { id = category.Id })">
                                <img src="@firstPhoto.ImagePath" class="card-img-top" alt="@category.Name" />
                            </a>
                            <div class="card-body">
                                <h3>@category.Name</h3>
                                <a href="@Url.Action("CategoryPhotos", "Home", new { id = category.Id })"
                                   class="btn btn-sm btn-primary mt-2">
                                    <i class="fa fa-images me-1"></i> View All
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center mt-4">
            No categories or photos found.
        </div>
    }
</div>
