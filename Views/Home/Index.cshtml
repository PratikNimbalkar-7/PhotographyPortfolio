@model IEnumerable<PhotographyPortfolio.Models.Photo>
@{
    ViewData["Title"] = "Gallery";
    var cats = ViewBag.Categories as List<PhotographyPortfolio.Models.Category>;
}

<style>
    body {
        background-color: #0d0d0d;
        color: #f5f5f5;
        font-family: 'Poppins', sans-serif;
    }

    h1 {
        color: #00bcd4;
    }

    .card {
        background-color: #1a1a1a;
        border: 1px solid #333;
        transition: all 0.3s ease;
        border-radius: 10px;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 20px rgba(0, 188, 212, 0.4);
        }

        .card img, .card video {
            border-bottom: 1px solid #333;
            transition: transform 0.3s ease;
            height: 220px;
            object-fit: cover;
            border-radius: 10px 10px 0 0;
            width: 100%;
        }

            .card img:hover, .card video:hover {
                transform: scale(1.05);
            }

    .card-body {
        text-align: center;
    }

    .btn-primary {
        background: linear-gradient(45deg, #00bcd4, #007bff);
        border: none;
        border-radius: 50px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(45deg, #007bff, #00bcd4);
            transform: scale(1.05);
        }

    .gallery-section {
        padding: 50px 0;
    }

    h3 {
        color: #00bcd4;
        margin-top: 10px;
    }

    hr.section-divider {
        border: 0;
        border-top: 1px solid #333;
        margin: 60px 0;
    }
</style>

<div class="container gallery-section">
    <!-- Photos Section -->
    <h1 class="text-center mb-5">Photo Gallery</h1>

    <div class="row">
        @foreach (var photo in Model)
        {
            var category = cats.FirstOrDefault(c => c.Id == photo.CategoryId);
            <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <a asp-action="CategoryPhotos" asp-route-id="@photo.CategoryId">
                        <img src="@photo.ImagePath" class="card-img-top" alt="@photo.Title" />
                    </a>
                    <div class="card-body">
                        <h3 class="fw-bold">@category?.Name</h3>
                        <a href="@Url.Action("CategoryPhotos", "Home", new { id = photo.CategoryId })"
                           class="btn btn-sm btn-primary mt-2">
                            <i class="fa fa-images me-1"></i> View All
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>
